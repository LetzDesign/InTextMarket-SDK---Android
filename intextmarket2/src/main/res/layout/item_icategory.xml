        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:alignItems="flex_start"
            app:justifyContent="flex_start"
            app:flexDirection="column"
            app:flexWrap="nowrap"
            app:layout_flexGrow="1"
            app:layout_flexBasisPercent="60%">

            <TextView
                android:id="@+id/ibusiness_name_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="La fonda de Yaya"
                android:theme="@style/IBusinessFragmentHeader" />


            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:alignItems="center"
                app:flexDirection="row"
                app:flexWrap="nowrap">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:src="@drawable/ic_email_itw" />

                <TextView
                    android:id="@+id/ibusiness_email_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="lafondadeyaya@gmail.com"
                    android:theme="@style/IBusinessFragmentSubHeader" />

            </com.google.android.flexbox.FlexboxLayout>

        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:alignItems="center"
            app:flexDirection="row"
            app:flexWrap="nowrap"
            app:layout_flexGrow="1"
            app:layout_flexBasisPercent="40%">

            <ImageView
                android:id="@+id/iweb_event_id"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_web_shopping_itw"
                app:layout_alignSelf="flex_start" />

            <ImageView
                android:id="@+id/iweb_phone_id"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_phone_itw" />

            <ImageView
                android:id="@+id/iweb_map_id"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_google_maps_itw"
                app:layout_alignSelf="flex_end" />


        </com.google.android.flexbox.FlexboxLayout>

    </com.google.android.flexbox.FlexboxLayout>


