<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    tools:context=".views.IFunctionsFragment">

    <com.google.android.flexbox.FlexboxLayout
        android:background="@drawable/imemojishapebk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="8dp"
        app:flexDirection="row"
        android:elevation="1dp"
        app:flexWrap="nowrap"
        app:justifyContent="space_around">

        <ImageButton
            android:id="@+id/icamera_msg_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            android:src="@drawable/ic_round_photo_camera_24px" />

        <ImageButton
            android:id="@+id/iattach_msg_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            android:src="@drawable/ic_round_insert_drive_file_24px" />

        <ImageButton
            android:id="@+id/iaudio_msg_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            android:src="@drawable/ic_round_mic_24px" />

        <ImageButton
            android:id="@+id/ivideo_msg_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            android:src="@drawable/ic_round_videocam_24px" />

        <ImageButton
            android:id="@+id/isearch_msg_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            android:src="@drawable/ic_round_search_24px" />

        <ImageButton
            android:id="@+id/iclose_msg_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            android:src="@drawable/ic_round_close_24px" />


    </com.google.android.flexbox.FlexboxLayout>

</FrameLayout>