<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="IBusinessFragmentHeader" parent="Theme.AppCompat.Light">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="IBusinessFragmentSubHeader">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CategoryButton">
        <item name="android:background">@drawable/imemojishapebk</item>
        <item name="android:padding">4dp</item>
        <item name="android:autofilledHighlight" tools:targetApi="o">@color/colorAccent</item>
    </style>

    <style name="IMarketActionButton">
        <item name="android:background">@drawable/imemojishapebk</item>
    </style>

    <style name="IMarketSearchFragmentButton">
        <item name="android:background">@color/icons</item>
        <item name="android:textSize">8sp</item>
        <item name="android:drawableTop">@drawable/ic_save_all_24_itw</item>
        <item name="android:text">@string/markets_list_fragment_save</item>
        <item name="android:autofilledHighlight" tools:targetApi="o">@color/colorPrimary</item>
    </style>

    <style name="IMarketShareFragmentButton">
        <item name="android:background">@color/icons</item>
        <item name="android:textSize">8sp</item>
        <item name="android:drawableTop">@drawable/ic_share_itw</item>
        <item name="android:text">@string/markets_list_fragment_share</item>
        <item name="android:autofilledHighlight" tools:targetApi="o">@color/colorPrimary</item>
    </style>
</resources>